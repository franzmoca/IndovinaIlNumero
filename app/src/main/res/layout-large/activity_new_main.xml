<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:background="@drawable/prova2">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="145dp"
        android:weightSum="3"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="65dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:visibility="visible"
            android:gravity="center"
            android:layout_marginTop="-50dp">

            <ImageView
                android:layout_width="84dp"
                android:layout_height="84dp"
                android:id="@+id/imageView2"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:src="@drawable/tutorialx"
                android:clickable="true"
                android:focusable="true"
                android:layout_gravity="top"
                 />

            <ImageView
                android:layout_width="94dp"
                android:layout_height="85dp"
                android:id="@+id/imageView3"
                android:src="@drawable/giocolivellix"
                android:layout_gravity="top"
                android:onClick="GoToLivelli"
                android:clickable="true"
                android:focusable="true" />

            <ImageView
                android:layout_width="84dp"
                android:layout_height="84dp"
                android:id="@+id/imageView4"
                android:background="@drawable/giocoliberox"
                android:onClick="startFreeGame"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginLeft="10dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:weightSum="1">

            <TextView
                android:layout_width="51dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Tutorial"
                android:id="@+id/texttutorial"
                android:layout_weight="0.27"
                android:textSize="20dp"
                android:gravity="center"
                android:layout_marginLeft="15dp" />

            <TextView
                android:layout_width="35dp"
                android:layout_height="52dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Modalita' Livelli"
                android:id="@+id/textlivelli"
                android:layout_weight="0.36"
                android:gravity="center"
                android:textSize="20dp" />

            <TextView
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Gioco Libero"
                android:id="@+id/textlibero"
                android:layout_weight="0.31"
                android:gravity="center"
                android:textSize="20dp" />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="116dp"
        android:weightSum="3"
        android:layout_gravity="center_vertical|bottom"
        android:layout_marginTop="65dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:visibility="visible"
            android:gravity="center">
            <ImageView
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_width="84dp"
                android:layout_height="84dp"
                android:id="@+id/imageView5"
                android:src="@drawable/impostazionix"
                android:clickable="true"
                android:focusable="true"
                android:onClick="Impostazioni"
                android:layout_gravity="top"
                android:layout_marginRight="10dp" />

            <ImageView
                android:layout_width="84dp"
                android:layout_height="84dp"
                android:id="@+id/imageView7"
                android:src="@drawable/exitx"
                android:onClick="Esci"
                android:clickable="true"
                android:focusable="true"
                android:layout_gravity="top"
                android:layout_marginLeft="6dp" />

            <ImageView
                android:layout_width="84dp"
                android:layout_height="84dp"
                android:id="@+id/imageView6"
                android:src="@drawable/creditsx"
                android:clickable="true"
                android:focusable="true"
                android:layout_gravity="top"
                android:layout_marginLeft="15dp" />


        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:weightSum="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Impostazioni"
                android:id="@+id/textimpostazioni"
                android:textSize="20dp"
                android:gravity="center"
                android:layout_marginLeft="3dp" />

            <TextView
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Esci"
                android:id="@+id/textesci"
                android:layout_weight="0.40"
                android:gravity="center"
                android:textSize="20dp" />

            <TextView
                android:layout_width="35dp"
                android:layout_height="44dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Credits"
                android:id="@+id/textcredits"
                android:layout_weight="0.50"
                android:gravity="center"
                android:textSize="20dp"
                android:layout_marginLeft="10dp" />

        </LinearLayout>

    </LinearLayout>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="198dp"
        android:id="@+id/imageView"
        android:src="@drawable/icona"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="234dp"
        android:layout_alignParentBottom="false"
        android:layout_alignParentTop="true"
        />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Guess The Number"
        android:id="@+id/textView"
        android:layout_gravity="center"
        android:layout_marginTop="-140dp"
        android:gravity="center"
        android:textSize="50dp"
        android:textColor="#483c32" />


</FrameLayout>

