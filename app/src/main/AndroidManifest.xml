<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.franz.indovinailnumero.app" >

    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="19" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.franz.indovinailnumero.app.MainActivity"
            android:label="@string/app_name" />
        <activity
            android:name="com.franz.indovinailnumero.app.Game"
            android:label="@string/title_activity_game" />
        <activity
            android:name="com.franz.indovinailnumero.app.LevelGame"
            android:label="@string/title_activity_level_game" />
        <activity
            android:name="com.franz.indovinailnumero.app.NewMain"
            android:label="NewMain" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.franz.indovinailnumero.app.SceltaLivelli"
            android:label="@string/title_activity_scelta_livelli" >
        </activity>
        <activity
            android:name="com.franz.indovinailnumero.app.Impostazioni"
            android:label="@string/title_activity_impostazioni" >
        </activity>
    </application>

</manifest>
